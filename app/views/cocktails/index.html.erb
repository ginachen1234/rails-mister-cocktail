
<html>

<head>
  <link rel="stylesheet" href="tiles.scss">
</head>
<body>

<header>
      <div class="navbar">
        <ul class="nav">
          <li class="item">
            <a href="#">Home</a>
          </li>

          <li class="item">
            <a href="#">Blog</a>
          </li>

          <li class="item">
            <a href="#">About</a>
          </li>

          <li class="item">
            <a href="#">Contact</a>
          </li>
        </ul>


      </div>
    </header>



<div id="loader" style="margin-top: 1%">
    <div id="lemon"></div>
    <div id="straw"></div>
    <div id="glass">
        <div id="cubes">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <div id="drink"></div>
        <span id="counter"></span>
    </div>
    <div id="coaster"></div>

<footer>Please wait while<br>we fill up your glass...</footer>
</div>






<div class = "cocktails-container" style = "margin-top: 65%">
<% @cocktails.each do |cocktail| %>

<div class="cards" style = " margin-top: 6%;">


  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
     <%= link_to  cocktail.name, cocktail_path(cocktail)%>
  </div>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg)">
     <%= link_to cocktail.name, cocktail_path(cocktail) %>
  </div>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg)">
     <%= link_to cocktail.name, cocktail_path(cocktail) %>
  </div>


</div>

<% end %>
</div>







</body>
</html>




