<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All cocktails</h1>
      <ul class="list-group">

        <% @cocktails.each do |cocktail| %>
          <li class="list-group-item">
            <%= cl_image_tag("cocktail", width: 300, height: 200, crop: :fill) %>
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>



